    private DefaultTableModel model;
    
    public formmasterdata() {
        initComponents();
        
        model = new DefaultTableModel();
        tabelinput.setModel(model);

        model.addColumn("kode_barang");
        model.addColumn("nama_barang");
        model.addColumn("harga_barang");
        model.addColumn("jumlah_barang");
        
        loadData();
 
    }
    
    
    private void loadData(){
        bHapus.setEnabled(false);
        bEdit.setEnabled(false);
        model.getDataVector().removeAllElements();
        model.fireTableDataChanged();

        try {
            Connection c = koneksi.getKoneksi();
            Statement s = c.createStatement();

            String sql = "SELECT * FROM tbl_data_barang";
            ResultSet r = s.executeQuery(sql);

            while (r.next()) {
                Object[] o = new Object[5];
                o[0] = r.getString("kode_barang");
                o[1] = r.getString("nama_barang");
                o[2] = r.getString("harga_barang");
                o[3] = r.getString("jumlah_barang");
                
                model.addRow(o);
            }
            r.close();
            s.close();
        } catch (SQLException e) {
            System.out.println("Terjadi Error");
        }
//        
    }

    
                
                
